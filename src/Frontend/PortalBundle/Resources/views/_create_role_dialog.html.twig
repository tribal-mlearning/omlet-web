{% javascripts
	'@FrontendPortalBundle/Resources/public/js/create_role_dialog.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>

<script type="text/javascript">
    CreateRoleDialog.i18n = {
        confirm : "{{ 'dialog.create_role.action.confirm' | trans({},'role') }}",
        cancel : "{{ 'dialog.create_role.action.cancel' | trans({},'role') }}"
    };
</script>
{% endjavascripts %}

<div id="create_role_dialog" title="{{ 'dialog.create_role.title' | trans({},'role') }}">
    <label class="label-i">{{ 'dialog.create_role.field.name' | trans({},'role') }}</label>
    <input id="role_name" type="text" />
    <label class="label-i">{{ 'dialog.create_role.field.alias' | trans({},'role') }}</label>
    <input id="role_alias" type="text" />
</div>