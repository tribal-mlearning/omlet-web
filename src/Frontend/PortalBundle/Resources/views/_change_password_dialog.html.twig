{% javascripts
	'@FrontendPortalBundle/Resources/public/js/change_password_dialog.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>

<script type="text/javascript">
    ChangePasswordDialog.i18n = {
        confirm : "{{ 'dialog.change_password.action.confirm' | trans({},'user') }}",
        cancel : "{{ 'dialog.change_password.action.cancel' | trans({},'user') }}"
    };	    
</script>	
{% endjavascripts %}    

<div id="change_password_dialog" title="{{ 'dialog.change_password.title' | trans({},'user') }}">
	<div id="change_password_error_message" class="flash_message error_message" style="margin-bottom: 15px">
		<img src="/images/error.png" />
		<span id="error_message" class="flash_message_error"></span>
	</div>

	<div>
		{{ 'dialog.change_password.field.current' | trans({},'user') }}
		
		<input type="password" id="current" />
	</div>
	<div>
		{{ 'dialog.change_password.field.new' | trans({},'user') }}
	    
	    <input type="password" id="new" />
    </div>
    <div>
    	{{ 'dialog.change_password.field.verification' | trans({},'user') }}
	    
	     <input type="password" id="verification" />
    </div>
</div>